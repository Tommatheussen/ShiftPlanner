<MudDialog Style="min-height:450px">
    <DialogContent>
        <MudTextField Class="ma-1" Variant="Variant.Filled" @bind-Value="@shiftDefinition.ShiftName" Label="Shift naam" />
        <MudTimePicker Class="ma-1" Variant="Variant.Filled" PickerVariant="PickerVariant.Dialog" Label="Begin" @bind-Time="StartTime" />
        <MudTimePicker Class="ma-1" Variant="Variant.Filled" PickerVariant="PickerVariant.Dialog" Label="Eind" @bind-Time="EndTime" />
    </DialogContent>
    <DialogActions>
        <MudSpacer />
        <MudButton StartIcon="@Icons.Material.Filled.Save" Color="Color.Info" OnClick="SaveShift">Opslaan</MudButton>
        <MudSpacer />
    </DialogActions>
</MudDialog>
